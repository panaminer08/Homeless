<center>
    <div id="title_container">
        <h2>Helping the homeless is more <br>than a Government problem</h2>
        <%= link_to image_tag('volunteers') %>
    </div>
</center>
<div class="row">
    <div class="col s3">
        <div id="title_container">
            <div class="color">
                <strong><p>Drop-off centers located around NYC, where you can donate and contribute to helping the homeless temporarily and for the homeless of tommorrow.</p></strong>
            </div>
            <div class="inner">
                <%= @give['data'].each do |d| %>
                 <%= d[0] %>
                <%= d[7] %><br>
                <%= d[8] %><br>
                <%= d[9] %><br>
                <%= d[10] %><br>
                <%= d[11] %><hr>
                 <% end %> 
            </div>
        </div>
    </div>
    <div class="col s9">
        <div id="title_container">
            <div class="color">
            
            </div>
            <%= form_with model: @givings, url:"/givings/create" do |give| %>
            <%= give.text_field :contributions %>
            <%= give.select :contribution_shelter, options_for_select(['shelter in Manhattan', 'Shelter in Coney Island', 'Shelter in Bronx', 'Shelter in Brooklyn', 'Shelter in Harlem']) %>
            <%= give.submit "Donations" %>
            <% end %>
        </div>
    </div>
</div>
